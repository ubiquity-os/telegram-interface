{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable", "dom", "dom.iterable", "es2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --unstable-kv src/main.ts",
    "api-server": "deno run --allow-net --allow-env --allow-read --unstable-kv src/core/start-api-server.ts",
    "api-server:watch": "bash scripts/watch-api-server.sh",
    "cli-chat": "deno run --allow-net --allow-env --allow-read src/cli-chat.ts",
    "cli-chat:watch": "bash scripts/watch-cli-chat.sh",
    "test": "deno test --allow-net --allow-env",
    "test:e2e": "deno run --allow-net --allow-env tests/test-e2e-api.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "grammy": "https://deno.land/x/grammy@v1.21.1/mod.ts",
    "grammy/types": "https://deno.land/x/grammy@v1.21.1/types.ts",
    "std/": "https://deno.land/std@0.213.0/"
  },
  "deploy": {
    "project": "3cd948fc-3688-478e-8394-70a03eb59431",
    "exclude": [
      "**.spec.ts",
      "**/node_modules"
    ],
    "include": [
      "**"
    ],
    "entrypoint": "src/main.ts"
  }
}
