{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv src/main.ts",
    "api-server": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv src/core/start-api-server.ts",
    "api-server:watch": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch src/core/start-api-server.ts",
    "unified": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv src/unified-server.ts",
    "unified:watch": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch src/unified-server.ts",
    "start": "deno task unified",
    "cli-chat": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv src/cli-chat.ts",
    "cli-chat:watch": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch src/cli-chat.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --unstable-kv",
    "test:e2e": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv tests/test-e2e-api.ts",
    "set-webhook": "deno run --allow-net --allow-read --allow-env scripts/set-webhook.ts",
    "check-webhook": "deno run --allow-net --allow-read --allow-env scripts/check-webhook.ts",
    "test-openrouter": "deno test --allow-net --allow-read --allow-env tests/test-openrouter-llm-service.ts",
    "test-routing": "deno test --allow-net --allow-read --allow-env tests/test-openrouter-routing.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.213.0/",
    "https://deno.land/x/grammy@v1.20.3/": "https://deno.land/x/grammy@v1.20.3/",
    "@grammyjs/types": "https://deno.land/x/grammy@v1.20.3/types.ts",
    "@types/node": "npm:@types/node@^20.0.0",
    "inversify": "npm:inversify@^6.0.2",
    "reflect-metadata": "npm:reflect-metadata@^0.2.1"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["deno.ns", "dom", "es2022"]
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/"]
    }
  }
}
